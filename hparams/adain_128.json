{
    "Dir": {
        "log_root": "results/glow/wikiart_128"
    },
    "Glow" : {
        "image_shape": [128, 128, 3],
        "hidden_channels": 512,
        "K": 4,
        "L": 5,
        "actnorm_scale": 1.0,
        "flow_permutation": "invconv",
        "flow_coupling": "affine",
        "LU_decomposed": false,
        "learn_top": false,
        "y_condition": false,
        "y_classes": 10
    },
    "Criterion" : {
        "y_criterion": "multi-classes"
    },
    "Data" : {
        "resize": 128,
        "center_crop": 128
    },
    "Optim": {
        "name": "adam",
        "args": {
            "lr": 1e-3,
            "betas": [0.9, 0.999],
            "eps": 1e-8
        },
        "Schedule": {
            "name": "noam_learning_rate_decay",
            "args": {
                "warmup_steps": 4000,
                "minimum": 1e-4
            }
        }
    },
    "Device": {
        "glow": ["cuda:0"],
        "data": "cuda:0"
    },
    "Train": {
        "style_freq": 10,
        "batch_size": 1,
        "num_batches": 5000,
        "max_grad_clip": 5,
        "max_grad_norm": 100,
        "max_checkpoints": 20,
        "checkpoints_gap": 5000,
        "num_plot_samples": 1,
        "scalar_log_gap": 50,
        "plot_gap": 50,
        "inference_gap": 50,
        "n_image_samples": 20,
        "warm_start": "",
        "weight_y": 0.5
    },
    "Infer": {
        "pre_trained": ""
    }
}
